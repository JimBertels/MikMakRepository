@model IEnumerable<MikMak2016.App_Data.DAL.ProductArticle>

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>ProductArticle</h4>
<h2>Article produit: @ViewBag.ProdName</h2>

<table>
    <tr>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.Article.Number)</th>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.Article.Name)</th>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.Quantity)</th>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.Article.UnitPrice)</th>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.UpdatedBy)</th>
        <th class="col-md-2">@Html.DisplayNameFor(model => model.UpdatedOn)</th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Article.Number)
            </td>
            <td>
                @Html.DisplayFor(m => item.Article.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(m => item.Article.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(model => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(model => item.UpdatedOn)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOne", new { id = item.Id })|
                @Html.ActionLink("Delete", "DeleteOne", new { id = item.Id })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Add", "Create", new { id = ViewBag.IdProd })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
