@model MikMak2016.App_Data.DAL.ProductArticle

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h2>Article produit: @ViewBag.ProdName</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ProductArticle</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { @Value = ViewBag.Id, @readonly = true }) 
            </div>
            <script type="text/javascript">
                var element = document.getElementById("Id");
                element.value = @ViewBag.Id;
                element.setAttribute("readonly");
            </script>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdProduct, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdProduct, new { @Value = ViewBag.IdProd, @readonly = true }) ** ( @ViewBag.ProdName ) **
                
            </div>
            <script type="text/javascript">
                var element = document.getElementById("IdProduct");
                element.value = @ViewBag.IdProd;
                element.setAttribute("readonly");
            </script>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdArticle, "IdArticle", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdArticle", String.Empty)
                @Html.ValidationMessageFor(model => model.IdArticle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InsertedBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InsertedBy)
                @Html.ValidationMessageFor(model => model.InsertedBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InsertedOn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InsertedOn)
                @Html.ValidationMessageFor(model => model.InsertedOn)
            </div>
        </div>

        @*@Html.HiddenFor(model => model.UpdatedBy)
        @Html.HiddenFor(model => model.UpdatedOn)*@
        @*<div class="form-group">
            @Html.LabelFor(model => model.UpdatedBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UpdatedBy)
                @Html.ValidationMessageFor(model => model.UpdatedBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UpdatedOn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UpdatedOn)
                @Html.ValidationMessageFor(model => model.UpdatedOn)
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to article", "Edit", new { id = @ViewBag.IdProd })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
