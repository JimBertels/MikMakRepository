@model IEnumerable<MikMak2016.App_Data.DAL.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2 >

<p>
    @Html.ActionLink("Résumé Pdf", "GeneratePDF", "PDF", new { path = "ProductArticle" }, null)
</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedOn)
            </th>
       
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td>
                <button class="btn-warning">@Html.ActionLink("Editer", "Edit", new { id = item.Id })</button>
                <button class="btn-primary">@Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
                <button class="btn-danger">@Html.ActionLink("Supprimer", "Delete", new { id = item.Id })</button>
            </td> 
        </tr>
    }
    </table>
}
<div class="text-danger">
    @ViewBag.systeem
</div>