@model IEnumerable<MikMak2016.App_Data.DAL.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Liste d'articles</h2>

<button>@Html.ActionLink("Page d'accueil", "IndexUser", "Home")</button>
