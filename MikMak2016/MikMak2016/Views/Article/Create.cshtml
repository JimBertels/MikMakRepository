@model MikMak2016.App_Data.DAL.Article

@{
    ViewBag.Title = "Create";
}

<h2>Articles</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Créer un article</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Id, new { @Value = ViewBag.Id, @readonly = true })
            </div>
            <script type="text/javascript">
                var element = document.getElementById("Id");
                element.value = @ViewBag.Id;
                element.setAttribute("readonly");
            </script>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Number, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Number)
                @Html.ValidationMessageFor(model => model.Number)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.StandardCost, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.StandardCost)
                @Html.ValidationMessageFor(model => model.StandardCost)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Breadth, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Breadth)
                @Html.ValidationMessageFor(model => model.Breadth)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.GrossWeight, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.GrossWeight)
                @Html.ValidationMessageFor(model => model.GrossWeight)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.IdArticleType, "Type d'article", new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.DropDownList("IdArticleType", ".. select type d'article  .. ")
                @Html.ValidationMessageFor(model => model.IdArticleType)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.RestockingTerm, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.RestockingTerm)
                @Html.ValidationMessageFor(model => model.RestockingTerm)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.IdUnitBase, "Unité de base", new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.DropDownList("IdUnitBase", ".. select unité de base ..")
                @Html.ValidationMessageFor(model => model.IdUnitBase)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.UnitPrice, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.UnitPrice)
                @Html.ValidationMessageFor(model => model.UnitPrice)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.IdSupplier, "Fournisseur", new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.DropDownList("IdSupplier", ".. select fournisseur .. ")
                @Html.ValidationMessageFor(model => model.IdSupplier)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Image)
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>

       

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.InsertedBy, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.InsertedBy)
                @Html.ValidationMessageFor(model => model.InsertedBy)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.InsertedOn, new { @class = "control-label col-md-5" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.InsertedOn)
                @Html.ValidationMessageFor(model => model.InsertedOn)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="returnlink">
    @Html.ActionLink("Retourner à la liste d'articles", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
