@model MikMak2016.App_Data.DAL.ArticleType

@{
    ViewBag.Title = "Edit";
}

<h2>Types d'article</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editer un type d'article</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Code, new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.InsertedBy)
        @Html.HiddenFor(model => model.InsertedOn)

        <div class="form-group">
            @Html.LabelFor(model => model.UpdatedBy, new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.UpdatedBy)
                @Html.ValidationMessageFor(model => model.UpdatedBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UpdatedOn, new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.UpdatedOn)
                @Html.ValidationMessageFor(model => model.UpdatedOn)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Confirmer" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div class="returnlink">
    @Html.ActionLink("Retourner à la liste de types d'article", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
