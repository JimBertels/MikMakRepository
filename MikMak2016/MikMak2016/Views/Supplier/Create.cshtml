@model MikMak2016.App_Data.DAL.Supplier

@{
    ViewBag.Title = "Create";
}

<h2>Fournisseurs</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Créer un nouveau fournisseur</h4>
        <hr />

        @Html.ValidationSummary(true)

